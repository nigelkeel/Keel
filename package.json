{
  "name": "keel",
  "version": "1.0.0",
  "main": "dist/main/_.js",
  "author": "nigelkeel",
  "license": "MIT",
  "description": "Powered by Keel",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:web\" \"npm run dev:app\"",
    "dev:web": "vite",
    "dev:app": "node -r ts-node/register script/build --env=development --watch",
    "build:web": "vite build",
    "build:electron": "node -r ts-node/register script/build --env=production",
    "build": "npm run build:web && npm run build:electron && electron-builder"
  },
  "build": {
    "appId": "nigelkeel_2021",
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "element-plus": "^1.0.1-beta.27",
    "vue": "^3.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/minimist": "^1.2.1",
    "@types/wait-on": "^5.2.0",
    "@vue/compiler-sfc": "^3.0.4",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "9.1.0",
    "electron-builder": "^22.8.0",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.0",
    "less": "^4.1.0",
    "less-loader": "^7.2.1",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-esbuild": "^2.4.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.3",
    "vite": "^1.0.0-rc.13",
    "wait-on": "^5.2.0"
  },
  "keyword": [
    "vue3",
    "vite",
    "electron"
  ]
}
